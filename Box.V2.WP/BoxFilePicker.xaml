<UserControl x:Class="Box.V2.WP.BoxFilePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" x:Name="root">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Button Content="Select a File" Click="FilePicker_Click" />
        <Popup x:Name="FileChooser" IsOpen="{Binding IsOpen, ElementName=root}">
            <Grid>
                <TextBlock Text="tester" VerticalAlignment="Top"/>
                <TextBlock Text="bottom tester" VerticalAlignment="Bottom" />
            </Grid>

        </Popup>
    </Grid>
</UserControl>